@model IEnumerable<MyEuroleagueMVCAspNetCore.Models.Teams>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Team Logo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coach)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <div>
                    @if (!System.IO.File.Exists(item.ExistingPhotoPath))
                    {
                        <label class="text-danger">No selected Logo: </label>
                    }
                    <img src="@("~/image/"+item.TeamLogoImageName)" asp-append-version="true" width="50px" height="50px">
                </div>
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coach)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.TeamID"><i class="fas fa-edit"></i> Edit </a>
                <a asp-action="Details" asp-route-id="@item.TeamID"><i class="fas fa-info"></i> Details </a>
                <a asp-action="Delete" asp-route-id="@item.TeamID"><i class="fas fa-trash-alt"></i> Delete </a>
            </td>
        </tr>
}
    </tbody>
</table>
